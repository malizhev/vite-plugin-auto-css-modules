{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "NodeNext",
    "baseUrl": "./",
    "declarationDir": "./dist/types",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "types": ["vite/client"],
    "declaration": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts"]
}
